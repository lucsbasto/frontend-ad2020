#panel
  display flex
  flex-wrap wrap
  align-items center
  justify-content center
  background-image linear-gradient(to left, #f7f8f8, #acbb78)
  width 100%
  min-height 100vh

  &>div
      width 100%
      text-align center

  h1
    display table
    width 100%
    max-width 400px
    margin 0 auto 20px

  main
    display table
    width 100%
    max-width 1200px
    border-radius 15px
    box-shadow 2px 2px 10px 1px rgba(0, 0, 0, 0.2)
    background-color white
    padding 10px
    min-height 200px
    text-align left
    margin 0 auto
